<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="titleTextColor">@color/colorFont</item> <!-- toolbar title -->
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>

        <item name="android:textColorSecondary">@color/colorTextSecondary</item> <!-- three dots icon -->
        <item name="android:textColor">@color/colorFont</item>

        <item name="android:colorBackground">@color/colorPrimaryDark</item>

    </style>

    <style name="Settings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="titleTextColor">@color/colorFont</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textColorSecondary">@color/colorFontSecond</item>

        <item name="android:colorBackground">@color/colorPrimaryDark</item>

    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:colorBackground">@color/colorPrimaryDarker0</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/dialog_back</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textColorPrimary">@color/colorFont</item>
        <item name="colorAccent">@color/colorFont</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
</resources>
